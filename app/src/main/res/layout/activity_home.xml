<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/potrait_frontbgnew"
    tools:context="com.builders.shobha.shobhagroup.HomeActivity">

    <Button
        android:id="@+id/button_fill_form_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Feedback Form"
        android:textSize="18sp"
        android:textColor="#337ab7"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        android:background="@drawable/button_rounded"
        />
    <Button
        android:id="@+id/button_fill_site_form_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site Visit Form"
        android:textSize="18sp"
        android:textColor="#337ab7"
        android:padding="8dp"
        android:background="@drawable/button_rounded"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintTop_toBottomOf="@+id/button_fill_form_page" />
</android.support.constraint.ConstraintLayout>
